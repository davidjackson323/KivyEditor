        MDFillRoundFlatButton:
            id: allow_rotate
            pos_hint: {'center_x':0.065, 'center_y':0.1}
            md_bg_color: 0, 0, 0, 1
            text_color: 1, 1, 1, 1
            text: '-15'
            on_release: view_port.rotation -= 15

        MDFillRoundFlatButton:
            id: allow_rotate
            pos_hint: {'center_x':0.065*2.1, 'center_y':0.1}
            md_bg_color: 0, 0, 0, 1
            text_color: 1, 1, 1, 1
            text: '+15'
            on_release: view_port.rotation += 15

        MDFillRoundFlatButton:
