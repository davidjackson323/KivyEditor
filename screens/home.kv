
MDFloatLayout:
    md_bg_color: 0.05, 0.05, 0.05, 1
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    size: 1, 1

    MDFloatLayout:
        id: add_port

    AppView:
        id: view_port

    MDFloatLayout:
        size_hint: 0.55, 0.95
        pos_hint: {'right':0.75}
        min_width: '100dp'

        MDFillRoundFlatButton:
            id: allow_rotate
            pos_hint: {'center_x':0.065, 'center_y':0.1}
            md_bg_color: 0, 0, 0, 1
            text_color: 1, 1, 1, 1
            text: '-15'
            on_release: view_port.rotation -= 15

        MDFillRoundFlatButton:
            id: allow_rotate
            pos_hint: {'center_x':0.065*2.1, 'center_y':0.1}
            md_bg_color: 0, 0, 0, 1
            text_color: 1, 1, 1, 1
            text: '+15'
            on_release: view_port.rotation += 15

        MDFillRoundFlatButton:
            id: allow_rotate
            pos_hint: {'center_x':0.1, 'center_y':0.05}
            md_bg_color: 1, 0, 0, 1
            text_color: 1, 1, 1, 1
            text: 'Touch Rotation Disabled'
            on_release: view_port.rotation_allowed()

        MDIconButton:
            pos_hint: {'center_x':0.75, 'center_y':0.05}
            icon: 'home-circle'
            icon_size: '50dp'
            theme_icon_color: 'Custom'
            icon_color: 'white'
            on_release: view_port.scale = 1; view_port.auto_center()

        MDIconButton:
            pos_hint: {'center_x':0.65, 'center_y':0.05}
            icon: 'refresh-circle'
            icon_size: '50dp'
            theme_icon_color: 'Custom'
            icon_color: 'white'
            on_release: view_port.rotation = 0


        MDIconButton:
            pos_hint: {'center_x':0.85, 'center_y':0.05}
            icon: 'plus-circle'
            icon_size: '50dp'
            theme_icon_color: 'Custom'
            icon_color: 'white'
            on_release: view_port.scale += 0.1

        MDIconButton:
            pos_hint: {'center_x':0.95, 'center_y':0.05}
            icon: 'minus-circle'
            icon_size: '50dp'
            theme_icon_color: 'Custom'
            icon_color: 'white'
            on_release: view_port.scale -= 0.1





    MDBoxLayout:
        id: menu_bar
        pos_hint: {'center_x': 0.5, 'top':1}
        md_bg_color: 'black'
        size_hint: 1, 0.05
        orientation: 'horizontal'
        #padding: '10dp'
        #spacing: '10dp'

        MDRectangleFlatButton:
            text: 'File'
            radius: [0]
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            #size_hint: 1, 0.9

            font_theme_color: 'Custom'
            font_name: 'assets/fonts/racing'
            text_color: 'white'
            line_color: 0, 0, 0, 0
            #font_size: '24dp'
            #text_color: 'black'
            
        MDRectangleFlatButton:
            text: 'Window'
            radius: [0]
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            font_theme_color: 'Custom'
            font_name: 'assets/fonts/racing'
            text_color: 'white'
            line_color: 0, 0, 0, 0


        MDRectangleFlatButton:
            text: 'About'
            radius: [0]
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            font_theme_color: 'Custom'
            font_name: 'assets/fonts/racing'
            text_color: 'white'
            line_color: 0, 0, 0, 0
            #font_size: '20sp'

        MDLabel:
            text:'David Jackson - College of the Desert'
            halign: 'right'
            font_name: 'assets/fonts/racing'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1



    WidgetSelector:
        id: add_content

    WidgetSettings:
        



    MDLabel:
        id: mouse_box
        #theme_text_color: "Custom"
        color: 1, 1, 1, 1
        size_hint: 0.2, 0.025
        #radius: ['10dp']
        text: 'words'



    

        
            


