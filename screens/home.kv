            pos_hint: {'center_x':0.1, 'center_y':0.05}
            md_bg_color: 1, 0, 0, 1
            text_color: 1, 1, 1, 1
            text: 'Touch Rotation Disabled'
            on_release: view_port.allow_rotation(instance = self)

        MDIconButton:
            pos_hint: {'center_x':0.75, 'center_y':0.05}
            icon: 'home-circle'
            icon_size: '50dp'
            theme_icon_color: 'Custom'
            icon_color: 'white'
            on_release: view_port.reset_zoom()

        MDIconButton:
            pos_hint: {'center_x':0.65, 'center_y':0.05}
            icon: 'refresh-circle'
            icon_size: '50dp'
            theme_icon_color: 'Custom'
            icon_color: 'white'
            on_release: view_port.rotation = 0


        MDIconButton:
            pos_hint: {'center_x':0.85, 'center_y':0.05}
            icon: 'plus-circle'
            icon_size: '50dp'
            theme_icon_color: 'Custom'
            icon_color: 'white'
            on_release: view_port.zoom_in()

        MDIconButton:
            pos_hint: {'center_x':0.95, 'center_y':0.05}
            icon: 'minus-circle'
            icon_size: '50dp'
            theme_icon_color: 'Custom'
            icon_color: 'white'
